{% extends 'base_admin.html.twig' %}

{% block body %}
    <div>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Cr√©ation d'un contact</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">

                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.firstname) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.firstname) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.firstname) }}
                        </div>
                    </div>
                </div>

                <div>&nbsp;</div>

                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.lastname) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.lastname) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.lastname) }}
                        </div>
                    </div>
                </div>

                <div>&nbsp;</div>

                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.email) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.email) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                </div>

                <div>&nbsp;</div>

                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.object) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.object) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.object) }}
                        </div>
                    </div>
                </div>

                <div>&nbsp;</div>

                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.content) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.content) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.content) }}
                        </div>
                    </div>
                </div>

                <div>&nbsp;</div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}