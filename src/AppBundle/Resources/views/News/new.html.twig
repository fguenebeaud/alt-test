{% extends 'base_admin.html.twig' %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Cr√©ation d'une news</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <div class="row">
            <div class="col-md-8 col-md-offset-2">

                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.title) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.title) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.title) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.content) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.content) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.content) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.picture) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.picture) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.picture) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}