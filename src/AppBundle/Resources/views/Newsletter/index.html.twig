{% extends 'base_admin.html.twig' %}

{% block body %}
    <div>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Newsletter</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <a href="{{ path('newsletter_new')}}" title="Add newsletter" class="btn btn-success">
                    <i class="fa fa-plus"></i>&nbsp;Ajouter
                </a>
                <div>&nbsp;</div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Liste des newsletters
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Email</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for newsletter in newsletters %}
                            <tr class="{{ cycle(['odd', 'even'], loop.index0) }} gradeX">
                                <td>{{ newsletter.id }}</td>
                                <td>{{ newsletter.email }}</td>
                                <td>
                                    <a href="{{ path('newsletter_delete', {'id': newsletter.id}) }}" class="btn btn-danger"><i class="fa fa-times"></i></a>
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <a href="{{ path('newsletter_new')}}" title="Add newsletter" class="btn btn-success">
                    <i class="fa fa-plus"></i>&nbsp;Ajouter
                </a>
            </div>
        </div>
    </div>
{% endblock %}